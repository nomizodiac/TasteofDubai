<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/venueTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/blackBarLayout"
        android:background="@drawable/selector_orange_bar"
        android:gravity="center"
        android:text="Chefs Theatre"
        android:textColor="@color/white"
        android:textSize="20sp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/venueTextView"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_below="@+id/blackBarLayout"
            android:layout_weight="1"
            android:background="@drawable/selector_orange_bar"
            android:gravity="center"
            android:text="Chefs Theatre Times"
            android:textColor="@color/white"
            android:textSize="13sp"></TextView>

        <TextView
            android:id="@+id/actTextView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_below="@+id/blackBarLayout"
            android:layout_weight="1"
            android:background="@drawable/selector_orange_bar"
            android:gravity="center"
            android:layout_marginLeft="2dp"
            android:text="Chef / Restaurant"
            android:textColor="@color/white"
            android:textSize="13sp"></TextView>
    </LinearLayout>
</RelativeLayout>
