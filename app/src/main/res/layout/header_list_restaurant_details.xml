<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/restaurantsBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/restaurants_banner" />

    <ImageView
        android:id="@+id/restaurantImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/restaurantsBanner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/rest_01" />

    <RelativeLayout
        android:id="@+id/blackBarLayout"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/restaurantImg"
        android:layout_marginTop="5dp"
        android:background="@color/grey">

    </RelativeLayout>

    <TextView
        android:id="@+id/greyBarTxt"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/blackBarLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/selector_orange_bar"
        android:gravity="center"
        android:text="@string/taste_of_dubai_menu"
        android:textColor="@color/white"
        android:textSize="20sp"></TextView>


    <ImageView
        android:id="@+id/leafDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/greyBarTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/leaf_divider" />

</RelativeLayout>
